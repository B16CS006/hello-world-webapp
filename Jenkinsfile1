pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven3"
        dockerTool "docker"
        
    }
    

    stages {
        stage('VCS') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/creepyghost/hello-world-webapp.git'

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Build') {
            steps {
                
                // Run Maven on a Unix agent.
                sh "mvn clean package"
            }
        }
        stage('Deploy') {
            steps {
                script {
                    withDockerRegistry(
                        credentialsId: 'c867552a-ac40-49f4-8599-d2cf53571267',
                        toolName: 'docker') {
                        
                        // Build and Push
                        def echoServerImage = docker.build("b16cs006/java-echoserver:latest");
                        echoServerImage.push();
                    }
                }
            }
        }
    }
    post {
        // If Maven was able to run the tests, even if some of the test
        // failed, record the test results and archive the jar file.
        success {
            echo "Success"
            httpRequest url: "https://api.flock.com/hooks/sendMessage/a879bde1-0b78-4057-97a3-7d95d684a155", customHeaders: "hello-world-webapp success"
            // echo response.status
        }
        failure {
            echo "Failure! Duh!"
            httpRequest url: "https://api.flock.com/hooks/sendMessage/a879bde1-0b78-4057-97a3-7d95d684a155", customHeaders: "hello-world-webapp success"
            // echo response.status
        }
    }
}
